<div data-role = "content">
	<div class="ui-grid-c">
		<%@galleries_groups.each do |group|%>
			<%for i in 0..3%>
				<%case i%>
					<%when 0%>
						<div class="ui-block-a gallery-cell">
							<%=link_to mobile_app_gallery_path(:id=>group[i].id) do%>
								<div class = "cover">
									<%=image_tag group[i].cover_photo.picture_file.url, :style=>"height:auto; width:100%;"%>
								</div>
								<div class = "title">
									<h3><%=group[i].name%></h3>
								</div>
							<%end%>
						</div>
					<%when 1%>
						<div class="ui-block-b gallery-cell">
							<%=link_to mobile_app_gallery_path(:id=>group[i].id) do%>
								<div class = "cover">
									<%=image_tag group[i].cover_photo.picture_file.url, :style=>"height:auto; width:100%;"%>
								</div>
								<div class = "title">
									<h3><%=group[i].name%></h3>
								</div>
							<%end%>
						</div>
					<%when 2%>
						<div class="ui-block-c gallery-cell">
							<%=link_to mobile_app_gallery_path(:id=>group[i].id) do%>
								<div class = "cover">
									<%=image_tag group[i].cover_photo.picture_file.url, :style=>"height:auto; width:100%;"%>
								</div>
								<div class = "title">
									<h3><%=group[i].name%></h3>
								</div>
							<%end%>
						</div>
					<%when 3%>
						<div class="ui-block-d gallery-cell">
							<%=link_to mobile_app_gallery_path(:id=>group[i].id) do%>
								<div class = "cover">
									<%=image_tag group[i].cover_photo.picture_file.url, :style=>"height:auto; width:100%;"%>
								</div>
								<div class = "title">
									<h3><%=group[i].name%></h3>
								</div>
							<%end%>
						</div>	
				<%end%>
				
			<%end%>
		<%end%>
	</div>
</div>
