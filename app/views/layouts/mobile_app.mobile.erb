<!DOCTYPE HTML>
<html>
  <head>
    <title>Santa Tecla Cultural</title>
    <%= stylesheet_link_tag "/mobile/jquery_mobile/jquery.mobile-1.2.0.min.css", :media => "all" %>
    <%= stylesheet_link_tag "/mobile/jquery_mobile/jquery.mobile.theme-1.2.0.min.css", :media => "all" %>
    <%= stylesheet_link_tag "/mobile/css/tecla_cultura.css", :media => "all" %>
    <%= stylesheet_link_tag "/mobile/css/photoswipe/photoswipe.css", :media => "all" %>
    <%= csrf_meta_tags %>
    <meta name="viewport"  content="width=device-width,height=device-height,initial-scale=1.0,maximum-scale=1.0" />
  <body id = "mobile_body">
    <div data-role = "page" data-theme="a" <%=yield :gallery_page_class%> >
      <div data-role="header" data-theme="a" data-position="fixed">
        <%=link_to "Inicio", root_path, :data=>{:icon=>"home"},:id=>"menu-rigth"%>
        <div id="logo">
          <%=link_to root_path, :data=>{:role=>"none"} do%>
            <div id = "image">
              <%=image_tag("/images/logo.png", :class=>"app-logo")%>
            </div>
          <%end%>
        </div>
        <%=link_to "Atras", "", :data=>{:icon=>"arrow-l",:rel=>"back"},:id=>"menu-left"%>
      </div>
      <%=yield%>
      <%=yield :footer%>
    </div>

    <!-- Start of map page -->
    <div id = "map-page" data-role = "page" data-theme="a">
      <div data-role="header" data-theme="a" data-position="fixed">
        <%=link_to "Inicio", root_path, :data=>{:icon=>"home"},:id=>"menu-rigth"%>
        <div id="logo">
          <%=link_to root_path, :data=>{:role=>"none"} do%>
            <div id = "image">
              <%=image_tag("/images/logo.png", :class=>"app-logo")%>
            </div>
          <%end%>
        </div>
        <%=link_to "Atras", "", :data=>{:icon=>"arrow-l",:rel=>"back"},:id=>"menu-left"%>
      </div>
      <div id = "map" data-role = "content">
        
      </div>
      <%=yield :footer%>
    </div>
    <%= javascript_include_tag "/mobile/js/cordova-2.2.0.js" %>
    <%= javascript_include_tag "/mobile/jquery_mobile/jquery-1.8.3.min.js" %>
    <%= javascript_include_tag "/mobile/jquery_mobile/jquery.mobile-1.2.0.min.js" %>
    <%= javascript_include_tag "/mobile/js/photoswipe/klass.min.js" %>
    <%= javascript_include_tag "/mobile/js/photoswipe/code.photoswipe.jquery-3.0.5.min.js" %>
    <%= javascript_include_tag "/mobile/js/tecla_cultura.js" %>
    <script type="text/javascript" src="http://maps.googleapis.com/maps/api/js?sensor=false"></script>
    <%= javascript_include_tag "/js-libraries/gmaps.js" %>
  </body>
</html>