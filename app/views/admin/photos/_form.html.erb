<%- action = new_or_edit ? admin_info_pages_path : admin_info_page_path(:id=>@info_page.id) %>
<%= form_for @photo, :url=>action,:html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :description, :class => 'short-text-area',:rows=>5 %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :picture_file, :class => 'control-label' %>
    <div class="controls">
      <%= f.file_field :picture_file, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :gallery_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.collection_select :gallery_id, Gallery.all, :id, :name%>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                admin_photos_path, :class => 'btn' %>
  </div>
<% end %>
